  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Skills</div>
  </div>

  <ul class="list-disc md:columns-4 columns-2 mx-6">
    <li>Model-View-Controller</li>
    <li>HTML/CSS/Javascript</li>
    <li>Typescript</li>
    <li>NestJS</li>
    <li>Mikro-ORM</li>
    <li>Node.js</li>
    <li>React / Next</li>
    <li>SQL / PostgreSQL</li>
    <li>MobX</li>
    <li>Client Communications</li>
    <li>Database Design</li>
  </ul>
</BaseLayout>
